#!/usr/bin/env groovy
@Library('jp-devops-shared-library') _

pipeline {
    agent any

    environment {
        IMAGE_NAME = "registry.jambopay.co.ke/sms-poc/your-image:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def docker = new com.example.Docker(this)
                    docker.buildDockerImage(IMAGE_NAME)
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    def docker = new com.example.Docker(this)
                    docker.dockerPush(IMAGE_NAME)
                }
            }
        }
    }

    post {
        always {
            script {
                def docker = new com.example.Docker(this)
                docker.cleanupDockerImage(IMAGE_NAME)
            }
        }
    }
}


